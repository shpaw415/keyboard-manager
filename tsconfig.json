{
    "compilerOptions":{
        "target":"ES2022",
        "lib":["ES2022","DOM"],
        "moduleResolution":"Bundler",
        "jsx":"react-jsx",
        "esModuleInterop":true,
        "forceConsistentCasingInFileNames":true,
        "strict":true,
        "skipLibCheck":true,
        "outDir":"dist",
        "declaration":true
    },
        "include":["src"],
        "exclude":["node_modules","lib"]
    }